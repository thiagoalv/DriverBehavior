<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="thiagosalvadori.driverbehavior"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:icon="@mipmap/carsign"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="thiagosalvadori.driverbehavior.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="thiagosalvadori.driverbehavior.HistoryActivity"
            android:label="@string/title_activity_history" />
        <activity
            android:name="thiagosalvadori.driverbehavior.ManeuverChartActivity"
            android:label="@string/title_activity_maneuver_chart" />
        <activity
            android:name="thiagosalvadori.driverbehavior.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="thiagosalvadori.driverbehavior.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>